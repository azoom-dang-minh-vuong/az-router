{
  "name": "az-router",
  "version": "1.0.0",
  "author": "Azoom Vietnam",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "node": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "default": "./dist/cjs/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig-esm.json && renamer --find '/\\.js$/' --replace '.mjs' 'dist/esm/**/*.js'",
    "test": "ts-node-esm node_modules/mocha/bin/mocha tests/**/*.test.ts"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "express": "^4.0.0",
    "glob": "^7.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.0",
    "@types/glob": "^7.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^14.0.0",
    "mocha": "^10.2.0",
    "node-mocks-http": "^1.12.1",
    "renamer": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">= 14"
  },
  "files": [
    "dist"
  ],
  "volta": {
    "node": "14.21.2",
    "yarn": "1.22.19"
  }
}
